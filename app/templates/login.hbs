<section id="todoapp">
    <header id="header">
        <h1>Login</h1>
    </header>

    <section class="login">
        {{#if errorMessage}}
            <p class="error">{{ errorMessage }}</p>
        {{/if}}

        <form {{ action "login" on="submit" }}>
            {{ input type="text" value=email placeholder="i.am@awesome.com" }}
            {{ input type="password" value=password placeholder="my secret password" }}

            <button type="submit">Log me in</button>
        </form>
    </section>
</section>

<footer id="info">
    <p>Register</p>
</footer>
